manifest {
  description = 'Proof of concept of a SRA to compressed FASTQ pipeline with Nextflow'
  author = 'Maximilian Greil'
  nextflowVersion = '>=21.04.3'
  name = 'sradcqc'
  version = '0.1.0'
}

profiles {
  standard {
    process.container = 'maxgreil/sradcqc'
    docker.enabled = true
  }
}

process {
    withName: DOWNLOAD {
        cpus = 8
    }
}

params.tracedir = 'info'

timeline {
  enabled = true
  file = "${params.tracedir}/execution_timeline.html"
}
report {
  enabled = true
  file = "${params.tracedir}/execution_report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/execution_trace.txt"
}
dag {
  enabled = true
  file = "${params.tracedir}/pipeline_dag.svg"
}
